# Server
NODE_ENV=development
PORT=4000

# Database (Supabase)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d

# WhatsApp
WA_SESSION_PATH=./wa-sessions

# WhatsApp Anti-Block Defaults
WA_DEFAULT_MIN_DELAY=3000
WA_DEFAULT_MAX_DELAY=7000
WA_DEFAULT_MAX_MSG_PER_MIN=12
WA_DEFAULT_MAX_MSG_PER_HOUR=200
WA_DEFAULT_MAX_MSG_PER_DAY=1000
WA_DEFAULT_MAX_NEW_CHATS_PER_DAY=50

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
